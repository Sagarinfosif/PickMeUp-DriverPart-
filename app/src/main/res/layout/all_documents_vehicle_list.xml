<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/space10"
    android:layout_marginBottom="@dimen/space10"
    app:cardCornerRadius="@dimen/space50"

    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_list"
    android:background="@color/black"
    android:backgroundTint="@color/black"
    android:padding="@dimen/space10">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/space30"
        android:layout_height="@dimen/space30"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_cancel_red" />

    <LinearLayout
        android:id="@+id/ll_document_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/iv_image"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space10"
            android:padding="@dimen/space5"
            android:text="Completed"
            android:textColor="@color/white"
            android:textSize="@dimen/text12" />

        <TextView
            android:id="@+id/tv_itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space10"
            android:textColor="@color/white"
            android:padding="@dimen/space5"
            android:text="Terms and Condition"
            android:textSize="@dimen/text16" />

    </LinearLayout>
</RelativeLayout>
</androidx.cardview.widget.CardView>