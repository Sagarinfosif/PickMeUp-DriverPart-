<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_upcoming"
                android:layout_width="@dimen/space60"
                android:layout_height="@dimen/space60"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:src="@drawable/person" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space10"
                android:layout_toRightOf="@id/img_upcoming"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lay_up_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/space10"
                        android:text="Driver 1: Seema Sharma"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/space10"
                        android:layout_marginVertical="@dimen/space5"
                        android:drawableRight="@drawable/ic_box"
                        android:drawablePadding="@dimen/space10"
                        android:drawableTint="@color/quantum_brown"
                        android:text="4 items"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/space10"
                        android:layout_marginVertical="@dimen/space5"
                        android:text="Australia"
                        android:textSize="@dimen/text12" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@id/lay_up_txt">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/list_btn_accept"
                        android:layout_width="@dimen/space60"
                        android:layout_marginHorizontal="@dimen/space5"
                        android:background="@drawable/decline_btn_bg"
                        android:layout_height="@dimen/space30"
                        android:textColor="@color/black"
                        android:text="Accept"
                        android:textSize="@dimen/text8" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_marginHorizontal="@dimen/space5"
                        android:layout_width="@dimen/space60"
                        android:layout_height="@dimen/space30"
                        android:background="@drawable/decline_btn_bg"
                        android:id="@+id/list_btn_decline"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@id/list_btn_accept"
                        android:text="Decline"
                        android:textSize="@dimen/text8" />
                </RelativeLayout>
            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>