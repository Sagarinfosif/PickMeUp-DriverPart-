<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/space10"
    android:paddingTop="@dimen/space10"
    android:paddingRight="@dimen/space10"
    android:paddingBottom="@dimen/space10">


    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/space30"
        android:layout_height="@dimen/space30"
        android:layout_centerVertical="true"
        android:padding="@dimen/space5"
        android:src="@drawable/ic_google_docs" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_list"
        android:layout_toRightOf="@id/iv_image">
    <TextView
        android:id="@+id/tv_itemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space10"
        android:layout_toRightOf="@id/iv_image"
        android:drawableRight="@drawable/ic_right_to_arrow"
        android:padding="@dimen/space5"
        android:text="Safety Related"
        android:textSize="@dimen/text16" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space10"
            android:layout_toRightOf="@id/iv_image"
            android:padding="@dimen/space5"
            android:text="Safety Related"
            android:textSize="@dimen/text12" />
    </LinearLayout>
</RelativeLayout>