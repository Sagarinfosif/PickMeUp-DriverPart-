<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddVehicleFragment">

    <include
        android:id="@+id/topbar"
        layout="@layout/topbar1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topbar"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space20"
                    android:layout_marginVertical="@dimen/space10"
                    android:fontFamily="@font/roboto"
                    android:padding="@dimen/space10"
                    android:text="@string/vehicle_requirement"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text20"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space20"
                    android:fontFamily="@font/roboto"
                    android:padding="@dimen/space10"
                    android:text="@string/vehicle_information"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text16"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space20"
                    android:layout_marginTop="@dimen/space10"
                    android:fontFamily="@font/roboto"
                    android:padding="@dimen/space10"
                    android:text="@string/vehicle_manufactured"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space14" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space20"
                    android:layout_marginTop="@dimen/space10"
                    android:layout_marginBottom="@dimen/space10"
                    app:cardCornerRadius="@dimen/space16"
                    app:cardElevation="@dimen/space10">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:padding="@dimen/space15"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text16" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space20"
                    android:layout_marginTop="@dimen/space10"
                    android:fontFamily="@font/roboto"
                    android:padding="@dimen/space10"
                    android:text="@string/vehicle_model"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space14" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space20"
                    android:layout_marginTop="@dimen/space10"
                    android:layout_marginBottom="@dimen/space20"
                    app:cardCornerRadius="@dimen/space16"
                    app:cardElevation="@dimen/space10">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:padding="@dimen/space15"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text16" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space20"
                    android:layout_marginTop="@dimen/space10"
                    android:fontFamily="@font/roboto"
                    android:padding="@dimen/space10"
                    android:text="@string/vehicle_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space14" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space20"
                    android:layout_marginTop="@dimen/space10"
                    android:layout_marginBottom="@dimen/space20"
                    app:cardCornerRadius="@dimen/space16"
                    app:cardElevation="@dimen/space10">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:maxLines="1"
                        android:padding="@dimen/space15"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text16" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space20"
                    android:layout_marginTop="@dimen/space10"
                    android:fontFamily="@font/roboto"
                    android:padding="@dimen/space10"
                    android:text="@string/vehicle_image"
                    android:textColor="@color/black"
                    android:textSize="@dimen/space14" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/upload_car_img"
                    android:layout_width="@dimen/space200"
                    android:layout_height="@dimen/space200"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="@dimen/space20"
                    android:layout_marginTop="@dimen/space10"
                    android:layout_marginBottom="@dimen/space20"
                    app:cardCornerRadius="@dimen/space16"
                    app:cardElevation="@dimen/space10">

                    <ImageView
                        android:layout_width="@dimen/space200"
                        android:layout_height="@dimen/space200"
                        android:padding="@dimen/space10"
                        android:src="@drawable/mercesdess" />
                </com.google.android.material.card.MaterialCardView>

                <Button
                    android:id="@+id/continue_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="@dimen/space60"
                    android:layout_marginTop="@dimen/space10"
                    android:layout_marginBottom="@dimen/space30"
                    android:backgroundTint="@color/black"
                    android:background="@drawable/button_cicle_blue"
                    android:text="@string/continues"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</RelativeLayout>