<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TruckModule.Activity.Fragment.ChangePasswordFragment">


    <include
        android:id="@+id/include"
        layout="@layout/topbar1"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/include"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/space30"
            android:layout_marginRight="@dimen/space20"
            >

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/textBalck16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space20"
                android:text="Current Password" />


            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space10"
                android:background="@drawable/edt_back"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawablePadding="@dimen/space10"
                android:drawableTint="@color/skyblue"
                android:paddingLeft="@dimen/space15"
                android:paddingTop="@dimen/space10"
                android:paddingBottom="@dimen/space10"

                />


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/textBalck16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space20"
                android:text="New Password" />


            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space10"
                android:background="@drawable/edt_back"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawablePadding="@dimen/space10"
                android:drawableTint="@color/skyblue"
                android:paddingLeft="@dimen/space15"
                android:paddingTop="@dimen/space10"
                android:paddingBottom="@dimen/space10"

                />


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/textBalck16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space20"
                android:text="Confirm Password" />


            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space10"
                android:background="@drawable/edt_back"
                android:drawableStart="@drawable/ic_baseline_lock_24"
                android:drawablePadding="@dimen/space10"
                android:drawableTint="@color/skyblue"
                android:paddingLeft="@dimen/space15"
                android:paddingTop="@dimen/space10"
                android:paddingBottom="@dimen/space10"

                />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



    <androidx.appcompat.widget.AppCompatButton
        style="@style/textWhitGray16sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/space20"
        android:background="@drawable/btn_bac"
        android:text="Save"
        android:id="@+id/btnSave"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="@dimen/space20"
        app:layout_constraintRight_toRightOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>