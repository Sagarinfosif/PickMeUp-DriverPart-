<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/lightgrey"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragments.ConfirmNumberOtpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/space15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/verification"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/space24" />

        <TextView
            android:id="@+id/txt_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/space20"
            android:layout_marginLeft="@dimen/space5"
            android:layout_gravity="center_horizontal"
            android:text="Enter Your 4 Digit Code to Save Changes"
            android:textAlignment="center"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/space5"
            android:text="@string/Verificationcode"
            android:textColor="@color/black"
            android:textSize="@dimen/text16" />

        <in.aabhasjindal.otptextview.OtpTextView
            android:id="@+id/otp_view"
            android:layout_marginVertical="@dimen/space30"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space50"
            android:textColor="@color/black"
            app:height="40dp"
            app:width="40dp"
            android:layout_gravity="center_horizontal"
            app:bar_enabled="true"
            app:bar_height="2dp"
            app:length="4"
            app:bar_active_color="@android:color/transparent"
            app:bar_inactive_color="@android:color/transparent"
            app:otp_box_background="@drawable/white_otp_bg"
            app:otp_text_size="24dp"/>
        <Button
            android:id="@+id/otp_button_confirm"
            android:layout_marginTop="@dimen/space10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:textColor="@color/white"
            android:textAllCaps="true"
            android:layout_marginHorizontal="@dimen/space50"
            android:background="@drawable/button_cicle_blue"/>
    </LinearLayout>

</LinearLayout>