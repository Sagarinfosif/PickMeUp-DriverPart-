<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.DrivingHoursFragment">

    <include layout="@layout/topbar1" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space10"
                android:layout_marginTop="@dimen/space20"
                android:layout_marginBottom="@dimen/space10"
                app:cardCornerRadius="@dimen/space10"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/clock"
                            android:layout_width="@dimen/space30"
                            android:layout_height="@dimen/space30"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/space10"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/space10"
                            android:src="@drawable/ic_clock_menu" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/clock"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:padding="@dimen/space5"
                                android:text="0 min"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text18"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:padding="@dimen/space2"
                                android:text="Offline time remaining"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text18" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space2"
                        android:layout_marginVertical="@dimen/space10"
                        android:background="@color/lightgrey" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/wheel"
                            android:layout_width="@dimen/space30"
                            android:layout_height="@dimen/space30"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="@dimen/space10"
                            android:layout_marginRight="@dimen/space10"
                            android:src="@drawable/ic_steering_wheel" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/wheel"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:padding="@dimen/space5"
                                android:text="12 hr 0 min"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text18"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_marginBottom="@dimen/space10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/transparent"
                                android:padding="@dimen/space2"
                                android:text="Driving time Available"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text18" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space10"
                android:background="@android:color/transparent"
                android:padding="@dimen/text10"
                android:text="Driving Time Policy"
                android:textColor="@color/black"
                android:textSize="@dimen/text18"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space5"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space10"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/text10"
                    android:text="Maximum Driving Time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text16"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space10"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/text10"
                    android:text="For your safety and the safety of others, driving with the Drive App is Limited to no more than 12 hours of online time."
                    android:textColor="@color/black"
                    android:textSize="@dimen/text14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space10"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/text10"
                    android:text="8 Hours Offline Time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text16"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space10"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/text10"
                    android:text="After being offline for 8 hours. you will be able to go back online to receive new Drive trips"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space10"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/text10"
                    android:text="Time to recharge"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text16"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space10"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/text10"
                    android:text="Taking time to rest through out the day is important to your health and safety, but it doesn't count towards the required 8 hours offline"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text14" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space10"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/text10"
                    android:layout_marginTop="@dimen/space20"
                    android:text="Learn more"
                    android:id="@+id/learn_more"
                    android:textColor="@color/purple_700"
                    android:textSize="@dimen/text16"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>