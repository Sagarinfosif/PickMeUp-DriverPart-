<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TruckModule.Activity.Fragment.NavigationFragment">


    <include
        android:id="@+id/include"
        layout="@layout/topbar1"
        />




    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/include"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Navigation"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/text22"
                android:layout_margin="@dimen/space10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/space5"
                    app:cardUseCompatPadding="true"
                    android:layout_marginHorizontal="@dimen/space10"
                    android:layout_marginVertical="@dimen/space2"
                    app:cardCornerRadius="@dimen/space10">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="UseSwitchCompatOrMaterialXml">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Google"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14"
                            android:padding="@dimen/space10"
                            android:textStyle="bold"
                            />

                        <Switch
                            android:id="@+id/switch_google"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/space5"
                            android:layout_marginTop="@dimen/space5"
                            android:layout_marginEnd="@dimen/space5"
                            android:layout_marginRight="6dp"
                            android:layout_marginBottom="@dimen/space5" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/space5"
                    app:cardUseCompatPadding="true"
                    android:layout_marginHorizontal="@dimen/space10"
                    android:layout_marginVertical="@dimen/space2"
                    app:cardCornerRadius="@dimen/space10">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Auto Navigation"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14"
                            android:padding="@dimen/space10"
                            android:textStyle="bold"
                            />
                        <Switch
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/switch_nav"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/space5"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>