<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragments.refertab.ReferToDriveFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space30"
                android:layout_marginTop="@dimen/space10"
                android:text="Choose City:"
                android:textColor="@color/black"
                android:textSize="@dimen/text18" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space30"
                android:layout_marginTop="@dimen/space10">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/spinner_back"
                    android:entries="@array/city"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_down_arrow" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space300"
                android:src="@drawable/invite_drive" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space50"
                android:layout_marginTop="@dimen/space10"
                android:gravity="center_horizontal"
                android:text="Rewards are currently unavailable in the Location"
                android:textColor="@color/black"
                android:textSize="@dimen/text16" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/track_reward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/space50"
        android:layout_marginTop="@dimen/space10"
        android:layout_marginBottom="@dimen/space30"
        android:background="@drawable/orange_back"
        android:text="Track Rewards $100"
        android:textAllCaps="true"
        android:textColor="@color/white" />
</RelativeLayout>