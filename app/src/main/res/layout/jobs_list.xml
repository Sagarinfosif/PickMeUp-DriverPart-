                    android:textColor="@color/white"
                    android:padding="@dimen/space5"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/space10"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/img_person"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sohit_sharma"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginHorizontal="@dimen/space10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 hour ago"
                        android:layout_marginHorizontal="@dimen/space10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text10"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/space10"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I Want to shift my office to #4457, Australia"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginVertical="@dimen/space2"
                    android:layout_marginHorizontal="@dimen/space5"
                    android:textSize="@dimen/text12"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. of Packages- 8,Estimated Weight- 50 kgs"
                    android:textSize="@dimen/text12"
                    android:layout_marginVertical="@dimen/space2"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="@dimen/space5"/>

