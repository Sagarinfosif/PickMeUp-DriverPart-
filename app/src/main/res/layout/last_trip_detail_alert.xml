<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space15"
        android:layout_marginVertical="@dimen/space15"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <ImageView
        android:layout_width="@dimen/space60"
        android:layout_height="@dimen/space60"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/space10"
        android:src="@drawable/ic_sports_car"
        app:tint="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space10"
        android:gravity="center_horizontal"
        android:text="Your Last Trip"
        android:textColor="@color/black"
        android:textSize="@dimen/text16"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/trip_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:paddingStart="@dimen/space15"
            android:paddingEnd="@dimen/space15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="18/3/19"
                android:textColor="@color/black"
                android:textSize="@dimen/text14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/roboto"
                android:text="02:10AM"
                android:textColor="@color/black"
                android:textSize="@dimen/text14"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bookLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space20">

                <LinearLayout
                    android:id="@+id/addressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/space15"
                        android:layout_height="@dimen/space15"
                        android:layout_marginTop="22dp"
                        android:background="@drawable/ic_navigation1" />

                    <ImageView
                        android:layout_width="@dimen/space3"
                        android:layout_height="@dimen/space3"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/darkblack_solid_round_shape" />

                    <ImageView
                        android:layout_width="@dimen/space3"
                        android:layout_height="@dimen/space3"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/darkblack_solid_round_shape" />

                    <ImageView
                        android:layout_width="@dimen/space3"
                        android:layout_height="@dimen/space3"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/darkblack_solid_round_shape" />

                    <ImageView
                        android:layout_width="@dimen/space3"
                        android:layout_height="@dimen/space3"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/darkblack_solid_round_shape" />


                    <ImageView
                        android:layout_width="@dimen/space15"
                        android:layout_height="@dimen/space15"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="6dp"

                        android:src="@drawable/ic_destination" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space20"
                    android:layout_toEndOf="@id/addressBar"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space55"
                        android:layout_marginRight="@dimen/space15">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <!--<TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gruppo"
                                android:text="@string/pickup_location"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_17" />-->

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto"
                                android:text="Frankin St 0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text16" />
                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/space15"

                        android:background="@color/lightgrey" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space55"
                        android:layout_marginRight="@dimen/space15">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <!--<TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/gruppo"
                                android:text="@string/pickup_location"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_17" />-->

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto"
                                android:text="Frankin St 0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text16" />
                        </LinearLayout>

                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/space10"
        android:layout_height="wrap_content">

        <TextView
            android:layout_toLeftOf="@id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space10"
            android:text="Price:  "
            android:textColor="@color/black"
            android:textSize="@dimen/text16"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space10"
            android:layout_centerHorizontal="true"
            android:text="$ 10.05"
            android:id="@+id/price"
            android:textColor="@color/black"
            android:textSize="@dimen/text18"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>